<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y300"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x30"
        android:id="@+id/iv_card"
        app:cardElevation="@dimen/y5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivBook"
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/y240"


        android:transitionName="@string/transition_book_img"/>
</android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_card"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y10"
        android:layout_toRightOf="@id/iv_card"
        android:text="我是书名"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/new_book_auther"/>
<TextView
    android:textColor="@color/new_book_auther"
    android:layout_marginTop="@dimen/y20"
    android:layout_marginLeft="@dimen/x30"
    android:layout_toRightOf="@id/iv_card"
    android:text="作者"
    android:layout_width="wrap_content"
    android:id="@+id/tvAuther"
    android:layout_below="@id/tvTitle"
    android:layout_height="wrap_content"/>
    <ImageView

        android:padding="@dimen/x10"
        android:id="@+id/add_TV"
        android:layout_width="@dimen/x165"
        android:layout_height="@dimen/y55"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x20"
        android:background="@mipmap/havesave"
        android:textSize="@dimen/text_font_med"/>
</RelativeLayout>

