<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/head_fragmen">

        <RelativeLayout
            android:id="@+id/Note_return"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/new_write_arrows"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/Note_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的笔记"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_big"/>


    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/noteinfo_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"

        app:tabBackground="@color/seach_item_deiver"
        app:tabIndicatorColor="@color/indecttabs"
        app:tabSelectedTextColor="@color/red"
        app:tabTextColor="@color/white"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/noteinfo_Vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>