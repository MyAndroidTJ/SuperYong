<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/head_fragmen">
        <RelativeLayout
            android:id="@+id/setting_activity_return"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
              android:layout_centerInParent="true"
                android:src="@mipmap/new_write_arrows"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tv_save"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/text_font_medium"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_big"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y350"
        android:background="@color/head_fragmen">

        <ImageView
            android:id="@+id/roundImageView3"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/x220"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x20"
            android:src="@mipmap/logicon"/>

        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/bt_head"
            android:layout_width="@dimen/x170"
            android:layout_height="@dimen/y50"
            android:layout_below="@+id/roundImageView3"
            android:layout_marginTop="12dp"
            android:background="@mipmap/information2"
            android:text="头像设置"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/name_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x50"
            android:text="修改昵称"
            android:textColor="@color/setting_ziliao_item_font"
            android:textSize="@dimen/text_font_medium"/>

        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:src="@mipmap/information1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_alignParentBottom="true"
            android:background="@color/serach_item_bac"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sex_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x50"
            android:text="男"
            android:textColor="@color/setting_ziliao_item_font"
            android:textSize="@dimen/text_font_medium"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:cursorVisible="false"
            android:gravity="center"
            android:hint="选择性别"/>

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_alignParentBottom="true"
            android:background="@color/serach_item_bac"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bri_day_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_birthady"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x50"
            android:text="生日"
            android:textColor="@color/setting_ziliao_item_font"
            android:textSize="@dimen/text_font_medium"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:cursorVisible="false"
            android:hint="输入生日"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_alignParentBottom="true"
            android:background="@color/serach_item_bac"/>
    </RelativeLayout>
</LinearLayout>