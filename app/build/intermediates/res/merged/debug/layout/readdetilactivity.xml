<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/head_fragmen"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/setting_activity_return"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100">

            <ImageView
                android:id="@+id/readactivity_return"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:layout_centerInParent="true"
                android:src="@mipmap/new_write_arrows"/>
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/readdetil_activity_shoucang"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/readdetil_shoucang"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_centerInParent="true"
                android:background="@mipmap/shoucang"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/readdetil_activity_share"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/readdetil_activity_shoucang"
            android:layout_toStartOf="@+id/readdetil_activity_shoucang">

            <ImageView
                android:id="@+id/readdetil_share"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_centerInParent="true"
                android:background="@mipmap/fenxiang"/>

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/readdetil_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/x30"
        android:text="实现农村平困生资助"
        android:textColor="@color/black"
        android:textSize="@dimen/text_font_medium"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/readdetil_image"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"/>

        <TextView
            android:layout_toRightOf="@id/readdetil_image"
            android:id="@+id/readdetil_imagename"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <me.codeboy.android.aligntextview.AlignTextView
            android:lineSpacingExtra="@dimen/x7"
            android:lineSpacingMultiplier="1.2"
            android:padding="@dimen/x20"
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/y30"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y280"
            android:background="#E1E1E0">

            <ImageView
                android:id="@+id/readdetil_booimg"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y225"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginLeft="@dimen/x40"
                android:layout_marginTop="@dimen/y20"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/readdetil_booimg">
                <TextView
                    android:id="@+id/readdetil_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="文史"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/font_small"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/readactivity_read"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/y60"
                    android:layout_below="@id/readdetil_desc"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/y10"
                    android:background="@drawable/shape_readdetil_startbook"
                    android:gravity="center"
                    android:text="开始阅读"
                    android:textSize="@dimen/font_small"/>




                <TextView
                    android:id="@+id/readdetil_bookname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/readdetil_desc"
                    android:gravity="center"
                    android:text="把握人民的意愿"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_font_medium"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <!--  <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scrollbars="none">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


          </LinearLayout>


      </ScrollView>-->
</LinearLayout>