    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:background="@color/head_fragmen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:id="@+id/library_sousuo"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y100">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
               android:layout_centerInParent="true"
                android:background="@mipmap/sousuuo"/>
            </RelativeLayout>

            <TextView
                android:textSize="@dimen/text_font_big"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:gravity="center"
                android:text="政协书库"
                android:textColor="@color/white"

                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"

            app:tabBackground="@color/white"
            app:tabIndicatorColor="@color/indecttabs"
            app:tabSelectedTextColor="@color/indecttabstextSeclect"
            app:tabTextColor="@color/indecttabstext">
        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        </android.support.v4.view.ViewPager>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>


