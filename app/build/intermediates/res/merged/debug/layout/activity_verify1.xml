<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <TextView
            style="@style/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@color/head_fragmen"
            android:gravity="center"
            android:text="短信验证登录"/>
        <RelativeLayout
            android:id="@+id/SMS_return"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/new_write_arrows"/>
        </RelativeLayout>

    </RelativeLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <EditText
            android:digits="0123456789"
            android:paddingLeft="@dimen/x20"
            android:id="@+id/regist_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_font_medium"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <EditText

                android:paddingLeft="@dimen/x20"
                android:id="@+id/regist_authcode_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入短信验证码"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_font_medium"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:textSize="@dimen/x28"
            android:layout_marginRight="@dimen/x20"
            android:id="@+id/regist_send_authcode_btn"
            android:layout_width="@dimen/x210"
            android:layout_height="@dimen/x70"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn"
            android:text="获取短信验证码"
            android:textColor="#fff"/>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
            android:paddingLeft="@dimen/x20"
            android:id="@+id/regist_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_font_medium"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:clickable="true"
        android:id="@+id/regist_submit_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:text="提交"
        android:textColor="#FFFFFF"/>
</LinearLayout>